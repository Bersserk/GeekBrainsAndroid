<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:backgroundTint="#2FFFEB3B"
    android:backgroundTintMode="src_over"
    android:orientation="vertical">

    <FrameLayout
        style="@style/frameLayoutStyle"
        android:layout_weight="2">

        <EditText
            android:id="@+id/textInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="8dp"
            android:autofillHints=""
            android:background="@color/black"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:ems="10"
            android:gravity="start|center_vertical"
            android:hint="@string/hintEditText"
            android:textSize="@dimen/textSizeButton" />
    </FrameLayout>

    <FrameLayout
        style="@style/frameLayoutStyle"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textOutput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@color/black"
            android:ems="10"
            android:gravity="clip_vertical|fill_vertical|end"
            android:hint="@string/hintTextView"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/textSizeButton" />
    </FrameLayout>

    <TableLayout
        style="@style/frameLayoutStyle"
        android:layout_weight="7">

        <TableRow style="@style/tableRowStyle">

            <Button
                android:id="@+id/button_delete"
                style="@style/StyleLeftButton"
                android:background="#03A9F4"
                android:onClick="delete"
                android:text="@string/button_delete"
                android:textColor="#F60202"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_leftPacket"
                style="@style/StyleCenterButton"
                android:onClick="operand"
                android:text="@string/button_leftBracket" />

            <Button
                android:id="@+id/button_rightBracket"
                style="@style/StyleCenterButton"
                android:onClick="operand"
                android:text="@string/button_rightBracket" />

            <Button
                android:id="@+id/button_divide"
                style="@style/StyleRightButton"
                android:onClick="operand"
                android:text="@string/button_divide"
                android:textColor="#023FF6" />
        </TableRow>

        <TableRow style="@style/tableRowStyle">

            <Button
                android:id="@+id/button_7"
                style="@style/StyleLeftButton"
                android:onClick="num"
                android:text="@string/button_7" />

            <Button
                android:id="@+id/button_8"
                style="@style/StyleCenterButton"
                android:onClick="num"
                android:text="@string/button_8" />

            <Button
                android:id="@+id/button_9"
                style="@style/StyleCenterButton"
                android:onClick="num"
                android:text="@string/button_9" />

            <Button
                android:id="@+id/button_multiply"
                style="@style/StyleRightButton"
                android:onClick="operand"
                android:text="@string/button_multiply"
                android:textColor="#023FF6" />
        </TableRow>

        <TableRow style="@style/tableRowStyle">

            <Button
                android:id="@+id/button_4"
                style="@style/StyleLeftButton"
                android:onClick="num"
                android:text="@string/button_4" />

            <Button
                android:id="@+id/button_5"
                style="@style/StyleCenterButton"
                android:onClick="num"
                android:text="@string/button_5" />

            <Button
                android:id="@+id/button_6"
                style="@style/StyleCenterButton"
                android:onClick="num"
                android:text="@string/button_6" />

            <Button
                android:id="@+id/button_minus"
                style="@style/StyleRightButton"
                android:onClick="operand"
                android:text="@string/button_minus"
                android:textColor="#023FF6" />
        </TableRow>

        <TableRow style="@style/tableRowStyle">

            <Button
                android:id="@+id/button_1"
                style="@style/StyleLeftButton"
                android:onClick="num"
                android:text="@string/button_1" />

            <Button
                android:id="@+id/button_2"
                style="@style/StyleCenterButton"
                android:onClick="num"
                android:text="@string/button_2" />

            <Button
                android:id="@+id/button_3"
                style="@style/StyleCenterButton"
                android:onClick="num"
                android:text="@string/button_3" />

            <Button
                android:id="@+id/button_plus"
                style="@style/StyleRightButton"
                android:onClick="operand"
                android:text="@string/button_plus"
                android:textColor="#023FF6" />
        </TableRow>

        <TableRow
            style="@style/tableRowStyle"
            android:layout_marginBottom="4dp">

            <Button
                android:id="@+id/button_0"
                style="@style/StyleLeftButton"
                android:onClick="num"
                android:text="@string/button_0" />

            <Button
                android:id="@+id/button_point"
                style="@style/StyleCenterButton"
                android:onClick="endCap"
                android:text="@string/button_point" />

            <Button
                android:id="@+id/button_percent"
                style="@style/StyleCenterButton"
                android:onClick="endCap"
                android:text="@string/button_percent" />

            <Button
                android:id="@+id/button_equals"
                style="@style/StyleRightButton"
                android:onClick="result"
                android:text="@string/button_equals" />
        </TableRow>

    </TableLayout>

</LinearLayout>